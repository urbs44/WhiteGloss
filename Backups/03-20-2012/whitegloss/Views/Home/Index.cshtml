@model WhiteGloss.Models.EnterPage
@{
    ViewBag.Title = "White Gloss";
    Layout = "~/Views/Shared/_Intro.cshtml";
}
<script src="/Scripts/jquery.center-in-client.js" type="text/javascript"></script>
<div class="enterPage">
    <div class="grid_12">
        <a href="/Home/Gallery/">
            <img id="enterImage" src="@Model.Image?width=@(Model.Width)&height=@(Model.Height)" /></a>
    </div>
    <div class="clear"></div>
    <br />
    <div class="grid_12 enter">
        <a href="/Home/Gallery/">@Model.Text</a>
    </div>
</div>
<script type="text/javascript">
    $(window).load(function () {
        $(".enterPage").hover(
                function () {
                    $(this).animate({
                        opacity: 1.0
                    });
                },
                function () {
                    $(this).animate({
                        opacity: 0.5
                    });
                }
            );
        $(".enterPage").centerInClient();
        $(".enterPage").fadeIn(1500);
    });
</script>