@model IEnumerable<WhiteGloss.Models.Artist>

@{
    ViewBag.Title = "Index";
}

<h2>Artists</h2>

<p>
    @Html.ActionLink("Create New Artist", "Create") &nbsp;&nbsp;|&nbsp;&nbsp; 
    @Html.ActionLink("Upload Images", "Create", "Images")
</p>
<table>
    <tr>
        <th>
            Name
        </th>
        <th>
            Home Page Name
        </th>
        <th>
            Bio
        </th>
        <th>
            Bio Image
        </th>
        <th>
            HomePage Image
        </th>
        <th>
            Display Order
        </th>
        <th>
            Active
        </th>
        <th>
            Created Date
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.HomePageName)
        </td>
        <td>@Html.Raw(item.Bio)
        </td>
        <td>
            <img src="@item.BioImage?maxwidth=100&maxheight=100" />
        </td>
        <td>            
            <img src="@item.HomePageImage?maxwidth=100&maxheight=100" />
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DisplayOrder)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Active)
        </td>
        <td>
            @item.CreatedDate.ToShortDateString()<br />
            @item.CreatedDate.ToShortTimeString()
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id = item.ArtistId }) |
            @Html.ActionLink("Details", "Details", new { id = item.ArtistId }) |
            @Html.ActionLink("Delete", "Delete", new { id = item.ArtistId })
        </td>
    </tr>
}

</table>
