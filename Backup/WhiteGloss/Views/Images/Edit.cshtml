@model WhiteGloss.Models.Image

@{
    ViewBag.Title = "Edit";
}

<h2>Edit</h2>

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

@using (Html.BeginForm("Edit", "Images", FormMethod.Post, new { enctype = "multipart/form-data" })) {
    @Html.ValidationSummary(true)
    <fieldset>
        <legend>Image</legend>
        
        @Html.HiddenFor(model => model.ImageId)
        @Html.HiddenFor(model => model.CreatedDate)
        @Html.HiddenFor(model => model.Normal)
        @Html.HiddenFor(model => model.Thumb)

        <div class="editor-label">
            @Html.LabelFor(model => model.ArtistId, "Artist")
        </div>
        <div class="editor-field">
            @Html.DropDownList("ArtistId", String.Empty)
            @Html.ValidationMessageFor(model => model.ArtistId)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Description)
        </div>
        <div class="editor-field">
            @Html.TextAreaFor(model => model.Description)
            @Html.ValidationMessageFor(model => model.Description)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.DisplayOrder)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.DisplayOrder)
            @Html.ValidationMessageFor(model => model.DisplayOrder)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Thumb, "Thumbnail Image")
        </div>
        <div class="editor-field">
            <img src="@(Model.Thumb)?maxwidth=100&maxheight=100" />
            <br />
            @Html.DisplayFor(model => model.Thumb)
            @Html.ValidationMessageFor(model => model.Thumb)
        </div>

        <div class="editor-label">
            Upload New Thumbnail Image
        </div>

        <input id="fileUpload1" name="files" type="file" />

        <div class="editor-label">
            @Html.LabelFor(model => model.Normal, "Normal Image")
        </div>
        <div class="editor-field">
            <img src="@(Model.Normal)?maxwidth=100&maxheight=100" />
            <br />
            @Html.DisplayFor(model => model.Normal)
            @Html.ValidationMessageFor(model => model.Normal)
        </div>

        <div class="editor-label">
            Upload New HomePage Image
        </div>

        <input id="fileUpload2" name="files" type="file" />

        <p>
            <input type="submit" value="Save" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
